<launch>
  <arg name="assembly_name" default="sensor_module_ver1" />

  <include
    file="$(find gazebo_ros)/launch/empty_world.launch" />
  <param name="robot_description"
    command="$(find xacro)/xacro '$(find hexapod_elevation_mapping)/model/sensor_assembly/$(arg assembly_name)/example.xacro'"/>
  <node
    name="spawn_model"
    pkg="gazebo_ros"
    type="spawn_model"
    args="-urdf -param robot_description -model $(arg assembly_name) -x 0 -y 0 -z 0.05 -R -1.5708 -P 0 -Y 0"
    output="screen" />

</launch>